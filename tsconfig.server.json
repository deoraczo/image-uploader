{
    "compilerOptions": {
      "target": "ES2019",
      "module": "commonjs",
      "outDir": "dist/server",
      "strict": true,
      "importHelpers": true,
      "moduleResolution": "node",
      "experimentalDecorators": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "removeComments": true,
      "typeRoots": ["node_modules/@types"],
      "sourceMap": true,
      "baseUrl": ".",
      "types": [
        "@types/node"
      ],
      "paths": {
        "@/*": [
          "server/*"
        ]
      },
      "lib": [
        "esnext",
        "dom",
        "dom.iterable",
        "scripthost"
      ]
    },
    "files": ["server/index.ts"],
    "include": [
      "server/**/*.ts"
    ],
    "exclude": ["node_modules", "dist"]
  }
